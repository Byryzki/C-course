{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "WSL Debug with Build",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bits_pointers_structs/tetris/a.out", // Updated binary path
            "args": [
                "8", "2", "1"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bits_pointers_structs/tetris",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "Build with GCC",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
