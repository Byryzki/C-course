{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with GCC",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/memory/kertotaulu/src/main.c",
                "${workspaceFolder}/memory/kertotaulu/src/kertotaulu.c",
                "-I${workspaceFolder}/memory/kertotaulu/include",
                "-o",
                "${workspaceFolder}/memory/kertotaulu/a.out",
                "-lm"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}