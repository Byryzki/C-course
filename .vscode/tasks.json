{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build C program",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",                 // Include debug info
                "${file}",            // Current file
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe" // Output exe in same folder
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile C file with MinGW (gcc)"
        }
    ]
}
