{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with GCC",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",                           // Debug symbols
                "${workspaceFolder}/bits_pointers_structs/tetris/src/main.c", // Path to your main source file
                "${workspaceFolder}/bits_pointers_structs/tetris/src/tetris.c",
                "-I${workspaceFolder}/bits_pointers_structs/tetris/include", // ðŸ‘ˆ Add include dir
                "-o",
                "${workspaceFolder}/bits_pointers_structs/tetris/a.out",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
